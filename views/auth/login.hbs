<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Войти</a></li>
        <li class='tab col s6'><a href='#register'>Регистрация</a></li>
      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>

      {{#if loginError}}
        <p class='alert alert-danger'>{{loginError}}</p>
      {{/if}}

      {{#if success}}
        <p class='alert alert-success'>{{success}}</p>
      {{/if}}

      <h2>Войти в магазин</h2>
      <form action='/auth/login' method='POST' novalidate>
        <div class='input-field'>
          <input
            id='email'
            name='email'
            type='email'
            class='validate'
            required
          />
          <span class='helper-text' data-error='Введите email'></span>
          <label for='email'>Email</label>
        </div>
        <div class='input-field'>
          <input
            id='password'
            name='password'
            type='password'
            class='validate'
            required
          />
          <span class='helper-text' data-error='Введите пароль'></span>
          <label for='password'>Пароль</label>
        </div>
        <input type='hidden' name='_csrf' value='{{@root.csrf}}' />
        <p class='reset'><a href='/auth/reset'>Забыли пароль?</a></p>
        <button class='btn waves-effect waves-light' type='submit'>Войти
          <i class='material-icons right'>send</i>
        </button>
      </form>
    </div>
    <div id='register' class='col s6 offset-s3'>

      {{#if registerError}}
        <p class='alert alert-danger'>{{registerError}}</p>
      {{/if}}
      <h2>Регистрация</h2>
      <form action='/auth/register' method='POST' novalidate>
        <div class='input-field'>
          <input
            id='remail'
            name='email'
            type='email'
            class='validate'
            required
          />
          <span class='helper-text' data-error='Введите email'></span>
          <label for='title'>Email</label>
        </div>
        <div class='input-field'>
          <input id='name' name='name' type='text' class='validate' required />
          <span class='helper-text' data-error='Ваше имя'></span>
          <label for='password'>Введите имя</label>
        </div>
        <div class='input-field'>
          <input
            id='rpassword'
            name='password'
            type='password'
            class='validate'
            required
          />
          <span class='helper-text' data-error='Введите пароль'></span>
          <label for='password'>Введите пароль</label>
        </div>
        <div class='input-field'>
          <input
            id='confirm'
            name='confirm'
            type='password'
            class='validate'
            required
          />
          <span class='helper-text' data-error='Введите пароль'></span>
          <label for='password'>Введите пароль ещё раз</label>
        </div>
        <input type='hidden' name='_csrf' value='{{@root.csrf}}' />
        <button
          class='btn waves-effect waves-light'
          type='submit'
        >Зарегистрироваться
          <i class='material-icons right'>send</i>
        </button>
      </form>
    </div>
  </div>
</div>