<h1>Корзина</h1>
<div id='cart'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Стоимость</th>
          <th>Количество</th>
          <th>Действие</th>
        </tr>
      </thead>

      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{count}}</td>
            <td><button
                class='btn btn-primary js-remove'
                data-id='{{id}}'
                data-csrf='{{@root.csrf}}'
              >Удалить</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>Цена: <span class='price big'>{{price}}</span></p>
    <form action='/orders' method='POST'>
      <input type='hidden' name='_csrf' value='{{@root.csrf}}' />
      <button type='submit' class='btn'>Сделать заказ</button>
    </form>
  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>